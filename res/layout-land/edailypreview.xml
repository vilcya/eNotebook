<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100" 
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="50"
        >

        <TextView
            android:id="@+id/tvPreviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="TextView" />
    </RelativeLayout>
    

    <RelativeLayout
        android:id="@+id/leDailyPreview"
        android:layout_width="325dp"
        android:layout_height="244dp"
        android:layout_gravity="center"
        android:background="@drawable/edaily_template" >

        <TextView
            android:id="@+id/tvAccTomorrow"
            android:layout_width="140dp"
            android:layout_height="210dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:ems="10" 
            android:text="What to accomplish tomorrow."
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/tvAccToday"
            android:layout_width="140dp"
            android:layout_height="210dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@+id/tvAccTomorrow"
            android:ems="10" 
            android:text="Today's accomplishments."
            android:textSize="11dp"/>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_alignLeft="@+id/tvAccToday"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:ems="10"
            android:text="Date" 
            android:textSize="10dp"/>

        <TextView
            android:id="@+id/tvName"
            android:layout_width="60dp"
            android:layout_height="10dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="32dp"
            android:ems="10"
            android:text="Name" 
            android:textSize="10dp" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="47" >
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="3"
        android:gravity="bottom"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_height = "50dp"
            android:layout_width="fill_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp">
	
        </LinearLayout>
    </RelativeLayout>
    
</LinearLayout>
