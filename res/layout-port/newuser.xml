<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_orange">
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="@string/sCreate"
	    android:textColor="@android:color/black"
	    android:textSize="20dp" 
	    android:typeface="serif" 
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"/>
	<EditText
	    android:id="@+id/etCFirstName"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:textSize="16dp" 
	    android:ems="10" 
	    android:hint="@string/sFirst"
	    android:inputType="textCapWords" />
	<EditText
	    android:id="@+id/etCLastName"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:textSize="16dp" 
	    android:ems="10" 
	    android:hint="@string/sLast"
	    android:inputType="textCapWords" />
	
	<TextView
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="@string/sTeam"
	    android:paddingLeft="7dp"
	    android:textColor="@android:color/black"
	    android:textSize="15dp" 
	    android:typeface="serif" />
    
    <Spinner
        android:id="@+id/dbTeam"
        android:layout_width="260dp"
        android:textSize="16dp" 
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:prompt="@string/sTeam"/>
    
 	<TextView
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="@string/sLead"
	    android:paddingLeft="7dp"
	    android:textColor="@android:color/black"
	    android:textSize="15dp" 
	    android:typeface="serif" />
 	
    <Spinner
        android:id="@+id/dbLead"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="16dp" 
        android:layout_gravity="center" 
        android:prompt="@string/sLead"/>
 
	<EditText
	    android:id="@+id/etCPassword"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:textSize="16dp" 
	    android:layout_gravity="center"
	    android:ems="10" 
	    android:hint="@string/setPassword"
		android:password="true"/>
	<EditText
	    android:id="@+id/etCPasswordCon"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:textSize="16dp" 
	    android:layout_gravity="center"
	    android:ems="10" 
	    android:hint="@string/setPasswordCon"
		android:password="true"/>
	
	<Button
	    android:id="@+id/bCreateAcc"
	    android:layout_width="260dp"
	    android:layout_height="50dp"
	    android:layout_gravity="center"
	    android:background="@drawable/b_orange"
	    android:text="@string/sCreate"
	    android:textSize="18dp" />

</LinearLayout>
