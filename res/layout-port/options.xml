<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_orange">
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="@string/sOption"
	    android:textColor="@android:color/black"
	    android:textSize="20dp" 
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"/>
	<TextView
	    android:id="@+id/tvCurrentName"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:textColor="@android:color/black"
	    android:textSize="16dp"
	    android:typeface="serif" 
	    android:layout_marginBottom="10dp"/>
	<EditText
	    android:id="@+id/etUsername"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:ems="10" 
	    android:hint="@string/setUsername"
	    android:inputType="textCapWords" />
	<EditText
	    android:id="@+id/etPassword"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:ems="10" 
	    android:hint="@string/setPassword"
	    android:password="true"/>
	<Button
	    android:id="@+id/bdoneButton"
	    android:layout_width="260dp"
	    android:layout_height="50dp"
	    android:layout_gravity="center"
	    android:background="@drawable/b_orange"
	    android:text="@string/sDone"
	    android:textSize="18dp"
	    android:layout_marginTop="10dp"/>
	<Button
	    android:id="@+id/bOptionBack"
	    android:layout_width="260dp"
	    android:layout_height="50dp"
	    android:layout_gravity="center"
	    android:background="@drawable/b_orange"
	    android:text="@string/sBack"
	    android:textSize="18dp"/>
</LinearLayout>