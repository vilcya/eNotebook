<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:text="@string/sOption"
	    android:textColor="@android:color/black"
	    android:textSize="20dp" 
	    android:layout_marginTop="10dp"
	    android:layout_marginBottom="10dp"/>
	<EditText
	    android:id="@+id/etNameFirst"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:ems="10" 
	    android:hint="@string/setNameFirst"/>
	<EditText
	    android:id="@+id/etNameLast"
	    android:layout_width="260dp"
	    android:layout_height="wrap_content"
	    android:layout_gravity="center"
	    android:ems="10" 
	    android:hint="@string/setNameLast"/>
	<Button
	    android:id="@+id/doneButton"
	    android:layout_width="260dp"
	    android:layout_height="50dp"
	    android:layout_gravity="center"
	    android:background="@drawable/b_orange"
	    android:text="@string/sDone"
	    android:textSize="18dp"
	    android:layout_marginTop="10dp"/>
</LinearLayout>